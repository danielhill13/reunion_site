<% include ../partials/header %>
<% include ../partials/navbar %>
<% include ../partials/flashes %>

<div class ="ui main text container segment">
<h1>Reunion Destination</h1>

<div class="ui divider"></div>

<% destinations.forEach(function(destination){ %>
    <div>
        <h2><%=destination.location%></h2>
        <img class="ui rounded image" src="<%=destination.image%>"><br>
        <p><%- destination.body %></p>
        <p><a href="/destinations/<%= destination._id %>">More Info</a></p>
        <a href="<%=destination.url%>"><%= destination.url %></a>
        <p>Submitted by: <%= destination.author.username %></p>
    </div>
    <div class="ui divider"></div>

<%}) %>
</div>
<a href="/destinations/new" class="item">New Post</a>

<%include ../partials/footer %>

