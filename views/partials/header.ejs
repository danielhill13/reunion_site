<body>
<div id="navbar" class="ui stackable secondary menu ">
    <a href="/" class="active item">Home</a>
    <a href="/destinations" class="item">Destinations</a>
    <a href="/event-details" class="item">Event Details</a>
    <a href="/photos" class="item">Photos</a>
    <div class="right menu">
            <%if (!currentUser){ %>
            <a class="item" href="/login">Login</a>
            <a class="item" href="/signup">Sign Up</a>
            <% }else { %>
            <a class="item" >Signed in as <%= currentUser.username %></a>
            <a class="item" href="/logout">Logout</a>
            <% } %>
    </div>
  </div>

 <div class="container">
     <% if(error && error.length > 0){ %>
 <div class="ui negative message" role="alert">
    <%= error %>
 </div>
 <% } else if(success && success.length > 0) {%>
 <div class="ui success message" role="alert">
    <%= success %>
 </div>
 <% } %>
 </div>

