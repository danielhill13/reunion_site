<% include ./partials/header %>
<div class ="ui main text container segment">
    <div class="ui huge header">Edit Destination<%= destination.title %></div>
    <!-- Have to use method override npm to set ?_method=PUT to convert POST to PUT-->
    <form class="ui form" action="/destinations/<%=destination._id %>?_method=PUT" method="POST">
    <div class="field">
        <label>Title</label>
        <input type="text"name="destination[title]" value="<%= destination.title %>">
    </div>
    <div class="field">
        <label>URL</label>
        <input type="text" name="destination[url]" value="<%= destination.url %>">
    </div>
    <div class="field">
        <label>Details...why should the reunion be here?t</label>
        <textarea name="destination[body]"><%= destination.body %></textarea>
    </div>
    <div class="field">
        <label>Submitted By</label>
        <input type="text" name="destination[submittedBy]" placeholder="Your Name">
    </div>
    <input class="ui blue basic big button" type="submit">
    </form>
</div>

<% include ./partials/footer %>